<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- WhatsApp Configuration Example -->
        <record id="whatsapp_config_demo" model="ofitec.whatsapp.config">
            <field name="account_name">OFITEC WhatsApp Business</field>
            <field name="phone_number_id">123456789012345</field>
            <field name="access_token">EAAEXAMPLETOKEN1234567890</field>
            <field name="app_secret">your_app_secret_here</field>
            <field name="api_version">v18.0</field>
            <field name="is_active">false</field>
            <field name="test_mode">true</field>
            <field name="webhook_verify_token">ofitec_webhook_verify_token</field>
            <field name="default_language">es</field>
        </record>

        <!-- Sample WhatsApp Messages -->
        <record id="whatsapp_message_sample_1" model="ofitec.whatsapp.message">
            <field name="config_id" ref="whatsapp_config_demo"/>
            <field name="direction">outbound</field>
            <field name="to_phone">+56912345678</field>
            <field name="message_type">text</field>
            <field name="content">Acción: Revisar riesgo crítico identificado en proyecto principal</field>
            <field name="status">sent</field>
            <field name="whatsapp_message_id">wamid.sample123</field>
        </record>

        <record id="whatsapp_message_sample_2" model="ofitec.whatsapp.message">
            <field name="config_id" ref="whatsapp_config_demo"/>
            <field name="direction">inbound</field>
            <field name="from_phone">+56912345678</field>
            <field name="message_type">text</field>
            <field name="content">OK, voy a revisar inmediatamente</field>
            <field name="status">read</field>
            <field name="whatsapp_message_id">wamid.sample124</field>
        </record>
    </data>
</odoo>