<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Ejecutivo Principal -->
        <record id="view_executive_dashboard" model="ir.ui.view">
            <field name="name">ofitec.executive.dashboard</field>
            <field name="model">ofitec.project.financials</field>
            <field name="arch" type="xml">
                <form string="Dashboard Ejecutivo OFITEC.AI" create="false" edit="false">
                    <sheet>
                        <div class="oe_dashboard">
                            <!-- KPIs Principales -->
                            <div class="oe_dashboard_main">
                                <div class="oe_dashboard_column">
                                    <div class="oe_dashboard_section">
                                        <h2>KPI Principales del Proyecto</h2>
                                        <div class="oe_dashboard_kanban">
                                            <div class="oe_kanban_card oe_kanban_card_primary">
                                                <div class="oe_kanban_content">
                                                    <h4>Progreso General</h4>
                                                    <div class="oe_value">
                                                        <field name="project_id" readonly="1" widget="selection"/>
                                                        <span>%</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="oe_kanban_card oe_kanban_card_success">
                                                <div class="oe_kanban_content">
                                                    <h4>Reportes Aprobados (Mes)</h4>
                                                    <div class="oe_value">
                                                        <field name="project_id" readonly="1" widget="statinfo"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="oe_kanban_card oe_kanban_card_warning">
                                                <div class="oe_kanban_content">
                                                    <h4>Riesgos Cr铆ticos Activos</h4>
                                                    <div class="oe_value">
                                                        <field name="project_id" readonly="1" widget="statinfo"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="oe_kanban_card oe_kanban_card_danger">
                                                <div class="oe_kanban_content">
                                                    <h4>Varianza Presupuestaria</h4>
                                                    <div class="oe_value">
                                                        <field name="variance_percentage" widget="percentage" readonly="1"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Panel de Gesti贸n de Obra -->
                            <div class="oe_dashboard_row">
                                <div class="oe_dashboard_column">
                                    <div class="oe_dashboard_section">
                                        <h3> Gesti贸n de Obra</h3>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Reportes Recientes</h5>
                                                <div class="oe_dashboard_list">
                                                    <!-- Lista de reportes recientes -->
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>Incidentes Activos</h5>
                                                <div class="oe_dashboard_list">
                                                    <!-- Lista de incidentes -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Panel de Riesgos -->
                            <div class="oe_dashboard_row">
                                <div class="oe_dashboard_column">
                                    <div class="oe_dashboard_section">
                                        <h3> Gesti贸n de Riesgos</h3>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="oe_dashboard_card">
                                                    <h5>Riesgos por Categor铆a</h5>
                                                    <canvas id="risksByCategoryChart" width="200" height="150"></canvas>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="oe_dashboard_card">
                                                    <h5>Exposici贸n al Riesgo</h5>
                                                    <div class="oe_metric">
                                                        <span class="oe_metric_value">$<field name="project_id" readonly="1"/></span>
                                                        <span class="oe_metric_label">Total Exposici贸n</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="oe_dashboard_card">
                                                    <h5>Riesgos Cr铆ticos</h5>
                                                    <div class="oe_metric">
                                                        <span class="oe_metric_value"><field name="project_id" readonly="1"/></span>
                                                        <span class="oe_metric_label">Activos</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Panel Financiero -->
                            <div class="oe_dashboard_row">
                                <div class="oe_dashboard_column">
                                    <div class="oe_dashboard_section">
                                        <h3> Gesti贸n Financiera</h3>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Resumen Presupuestario</h5>
                                                <div class="oe_financial_summary">
                                                    <div class="oe_budget_item">
                                                        <span class="oe_label">Presupuesto Total:</span>
                                                        <span class="oe_value"><field name="budget_amount" widget="monetary" readonly="1"/></span>
                                                    </div>
                                                    <div class="oe_budget_item">
                                                        <span class="oe_label">Costo Real:</span>
                                                        <span class="oe_value"><field name="progress_cost" widget="monetary" readonly="1"/></span>
                                                    </div>
                                                    <div class="oe_budget_item">
                                                        <span class="oe_label">Costo Estimado Total:</span>
                                                        <span class="oe_value"><field name="estimated_total_cost" widget="monetary" readonly="1"/></span>
                                                    </div>
                                                    <div class="oe_budget_item">
                                                        <span class="oe_label">Varianza:</span>
                                                        <span class="oe_value oe_<field name="variance_percentage" readonly="1" widget="percentage"/>">
                                                            <field name="variance_amount" widget="monetary" readonly="1"/>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>Tendencia de Costos</h5>
                                                <canvas id="costTrendChart" width="300" height="200"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Panel de Alertas -->
                            <div class="oe_dashboard_row">
                                <div class="oe_dashboard_column">
                                    <div class="oe_dashboard_section">
                                        <h3> Alertas y Notificaciones</h3>
                                        <div class="oe_alerts_container">
                                            <div class="alert alert-danger" role="alert">
                                                <strong>锔 Riesgos Cr铆ticos:</strong> Revisar riesgos de alta prioridad
                                            </div>
                                            <div class="alert alert-warning" role="alert">
                                                <strong> Varianza Presupuestaria:</strong> Costos exceden presupuesto en <field name="variance_percentage" readonly="1"/>%
                                            </div>
                                            <div class="alert alert-info" role="alert">
                                                <strong> Reportes Pendientes:</strong> 3 reportes diarios pendientes de aprobaci贸n
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acci贸n del Dashboard Ejecutivo -->
        <record id="action_executive_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard Ejecutivo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ofitec.project.financials</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_executive_dashboard"/>
            <field name="target">current</field>
            <field name="domain">[('state', 'in', ['active', 'approved'])]</field>
        </record>

        <!-- Men煤 Principal del Dashboard -->
        <menuitem id="menu_executive_dashboard" name="Dashboard Ejecutivo" sequence="10" action="action_executive_dashboard"/>
    </data>
</odoo>
